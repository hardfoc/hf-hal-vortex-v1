                         examples \
                         README.md \
                         DOCUMENTATION_INDEX.md

FILE_PATTERNS          = *.c *.cpp *.h *.hpp *.md
RECURSIVE              = YES
USE_MDFILE_AS_MAINPAGE = README.md
FILTER_PATTERNS        = *.md="sed -e '/^---$/,/^---$/d'"

EXCLUDE                = *build* *cmake-build-* *managed_components* *__pycache__* *.pyc
EXCLUDE_PATTERNS       = */build/* */cmake-build-*/* */.git/* */managed_components/* */__pycache__/* \
                         */lib/core/* */examples/esp32/scripts/*

#---------------------------------------------------------------------------
# Extraction
#---------------------------------------------------------------------------
